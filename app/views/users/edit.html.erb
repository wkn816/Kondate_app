<h1>ユーザー情報編集</h1>
<%= form_with model:@user, local:true do |f| %>

  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName"%> <br>

  <label for="inputImage">アイコン</label> <br>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %> <br>

  <label for="inputintroduction">introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputName"%> <br>

  <%= f.submit "Update User" %>
 

<% end %>